<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        App base theme for XML (Compose uses its own theme in code).
        Keep this simple and only use attributes that exist in Material 3.
    -->
    <style name="Theme.ContactlessFingerprint" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>
</resources>
